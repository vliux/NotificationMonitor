<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="SuwThemeMaterial.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UserGuideActivity" parent="SuwThemeMaterial.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="GuideTheme">
        <item name="suwBackground">@color/colorPrimary</item>
    </style>
    
    <style name="GuideContentText">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">@dimen/txt_larger</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="GuideActionButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/txt_larger</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
