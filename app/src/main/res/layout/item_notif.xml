<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="2dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_margin_horiz"
        android:paddingRight="@dimen/item_margin_horiz"
        android:paddingTop="@dimen/item_margin_verti"
        android:paddingBottom="@dimen/item_margin_verti"
        android:clickable="false">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_inter_margin"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/txt_largest"
            tools:text="七号狗熊"
            android:clickable="false"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_small"
            android:textColor="@color/hint_text_light"
            android:layout_marginBottom="@dimen/item_inter_margin"
            tools:text="2017-9-3 12:34:01"
            android:clickable="false"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_inter_margin"
            android:fontFamily="sans-serif"
            android:maxHeight="120dp"
            android:maxLines="6"
            android:textColor="@color/hint_text_light"
            android:textSize="@dimen/txt_normal"
            tools:text="Enim consequat enim pariatur id anim Ut Excepteur dolor in laborum incididunt veniam quis proident. in consequat aliquip in minim adipisicing exercitation sunt sed qui pariatur consequat commodo ea do."
            android:clickable="false"/>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/item_inter_margin"
            android:background="@color/divider_light"/> -->

        <TextView
            android:id="@+id/tv_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_inter_margin"
            android:layout_marginBottom="@dimen/item_inter_margin"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/hint_text_light"
            android:textSize="@dimen/txt_small"
            android:drawablePadding="@dimen/item_margin_horiz_small"
            tools:text="Wechat"
            android:clickable="false"/>

    </LinearLayout>


</android.support.v7.widget.CardView>