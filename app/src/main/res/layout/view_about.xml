<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
    android:paddingTop="@dimen/guide_out_margin_verti"
    android:paddingBottom="@dimen/guide_out_margin_verti"
    android:paddingLeft="@dimen/guide_out_margin_horiz"
    android:paddingRight="@dimen/guide_out_margin_horiz">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GuideContentText"
            android:textSize="@dimen/txt_larger"
            tools:text="Giraffe 1.0"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="@dimen/guide_out_margin_horiz"
            android:gravity="center"
            android:layout_marginBottom="@dimen/guide_out_margin_horiz"/>

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GuideContentText"
            android:text="@string/blog_link"
            android:textStyle="italic" />
    </LinearLayout>
</FrameLayout>