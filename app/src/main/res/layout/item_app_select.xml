<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:paddingLeft="@dimen/item_margin_horiz"
    android:paddingRight="@dimen/item_margin_horiz"
    android:paddingTop="@dimen/item_margin_verti"
    android:paddingBottom="@dimen/item_margin_verti">

    <TextView
        android:id="@+id/select_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GuideContentText"
        android:drawablePadding="@dimen/item_margin_verti"
        android:gravity="center_vertical"
        tools:text="手机淘宝"
        tools:drawableLeft="@mipmap/ic_launcher"/>

    <CheckBox
        android:id="@+id/select_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        tools:checked="true"/>

</FrameLayout>